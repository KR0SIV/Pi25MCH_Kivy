#:import MDBottomNavigation kivymd.uix.bottomnavigation.MDBottomNavigation
#:import MDBottomNavigationItem kivymd.uix.bottomnavigation.MDBottomNavigationItem
#:import MDTabs kivymd.uix.tab.MDTabs
#:import MDTabsBar kivymd.uix.tab.MDTabsBar




BoxLayout:
    orientation: 'vertical'
    ScreenManager:
        id: scr_mngr
        Screen:
            name: 'bottom_navigation'
            MDBottomNavigation:#Starts Navigation Bar
                id: bottom_navigation
                MDBottomNavigationItem:#First item, scanner activity
                    name: 'Scanner'
                    text: "SCAN"
                    icon: "radio"
                    GridLayout:#Main Layout or 'frame'
                        cols: 2
                        BoxLayout:#Top Left
                            orientation: 'vertical'
                            #anchor_x: 'left'
                            #anchor_y: 'top'
                            #spacing: dp(3)
                            MDLabel:
                                id: scanner_sdr_label
                                font_style: 'Body1'
                                theme_text_color: 'Primary'
                                text: "SDR:RTL  |  LNA:49  |  SR:2.0e6  |  Placeholder"
                                #size_hint: (1, 1)
                                #halign: 'justify'
                            MDLabel:
                                id: scanner_tag_label
                                font_style: 'Body1'
                                font_size: sp(50)
                                theme_text_color: 'Primary'
                                text: "Connecting..."
                                #size_hint: (1, 0.2)
                                #halign: 'left'
                            MDLabel:
                                id: scanner_system_label
                                font_style: 'Body1'
                                font_size: sp(35)
                                theme_text_color: 'Primary'
                                text: ""
                                #size_hint: (1, None)
                                #valign: 'top'
                            MDLabel:
                                id: scanner_srcgrp_label
                                font_style: 'Body1'
                                theme_text_color: 'Primary'
                                text: ""
                                #size_hint: (1, 0.01)
                                #halign: 'left'
                        BoxLayout:#Top Right
                            orientation: 'horizontal'
                            MDLabel:
                                font_style: 'Body1'
                                theme_text_color: 'Primary'
                                text: "Top Right Frame"
                                halign: 'center'
                        BoxLayout:#Bottom Left
                            orientation: 'horizontal'
                            MDLabel:
                                font_style: 'Body1'
                                theme_text_color: 'Primary'
                                text: "Bottom Left Frame"
                                halign: 'center'
                        BoxLayout:#Bottom Right
                            orientation: 'horizontal'
                            MDLabel:
                                font_style: 'Body1'
                                theme_text_color: 'Primary'
                                text: "Bottom Right Frame"
                                halign: 'center'

                MDBottomNavigationItem:
                    name: 'Logs'
                    text: "LOGS"
                    icon: 'file-multiple'
                    BoxLayout:
                        orientation: 'vertical'
                        MDTabs:
                            id: tabs
                            default_tab: 1
                            Tab:
                                text: 'Call Log'

                                MDLabel:
                                    id: log_call_label
                                    text: ''
                                    font_size: sp(20)
                                    text_size: self.width, None
                                    size_hint_y: None
                                    height: self.texture_size[1]
                            Tab:
                                text: 'System Log'
                            Tab:
                                text: 'Raw OP25 Log*'
                MDBottomNavigationItem:
                    name: 'bottom_navigation_desktop_1'
                    text: "SITE MODE"
                    icon: 'radio-tower'
                    id: bottom_navigation_desktop_1
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        padding: dp(28)
                        spacing: 10
                        MDTextField:
                            hint_text: "Hello again"
                MDBottomNavigationItem:
                    name: 'bottom_navigation_desktop_2'
                    text: "SETTINGS"
                    icon: 'tune'
                    id: bottom_navigation_desktop_2
                    MDLabel:
                        font_style: 'Body1'
                        theme_text_color: 'Primary'
                        text: "Cheese!"
                        halign: 'center'