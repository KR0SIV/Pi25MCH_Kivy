#:import MDBottomNavigation kivymd.uix.bottomnavigation.MDBottomNavigation
#:import MDBottomNavigationItem kivymd.uix.bottomnavigation.MDBottomNavigationItem

BoxLayout:
    orientation: 'vertical'
    ScreenManager:
        id: scr_mngr
        Screen:
            name: 'bottom_navigation'
            MDBottomNavigation:
                id: bottom_navigation_demo
                MDBottomNavigationItem:
                    name: 'octagon'
                    text: "SCAN"
                    icon: "radio"
                    MDLabel:
                        id: scanner_tag_label
                        font_style: 'Body1'
                        theme_text_color: 'Primary'
                        text: "SCANNER"
                        halign: 'center'
                MDBottomNavigationItem:
                    name: 'banking'
                    text: "LOGS"
                    icon: 'file-multiple'
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        padding: dp(28)
                        spacing: 10
                        MDTextField:
                            hint_text: "You can put any widgets here"
                            helper_text: "Hello :)"
                            helper_text_mode: "on_focus"
                MDBottomNavigationItem:
                    name: 'bottom_navigation_desktop_1'
                    text: "SITE MODE"
                    icon: 'radio-tower'
                    id: bottom_navigation_desktop_1
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        padding: dp(28)
                        spacing: 10
                        MDTextField:
                            hint_text: "Hello again"
                MDBottomNavigationItem:
                    name: 'bottom_navigation_desktop_2'
                    text: "SETTINGS"
                    icon: 'tune'
                    id: bottom_navigation_desktop_2
                    MDLabel:
                        font_style: 'Body1'
                        theme_text_color: 'Primary'
                        text: "Cheese!"
                        halign: 'center'